<Window x:Class="Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Name="Message"
                   Text="Signing In..."
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   FontSize="24"
                   FontFamily="Segoe UI Light, San Serif"
                   TextWrapping="Wrap" Height="38" Width="692" Margin="0,22,0,0"/>
        <TextBox Name="Details" IsReadOnly="true" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Height="242" Width="692" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
